<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity=""
    tools:context="app.ter.matrixme.AfficherImage" >
    
   <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:orientation="horizontal"
    android:background="#2162a6"
    android:gravity="center_vertical"
     >  
 
   <ImageView 
       android:id="@+id/back"
       android:layout_width="35sp"
       android:layout_height="30sp"
       android:contentDescription="back"
       android:src="@drawable/ic_menu_b"
       android:layout_alignParentLeft="true"
       android:layout_centerVertical="true"
       />
 
   <TextView
      android:id="@+id/AfficherMatrice"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:textColor="#ffffff"
    android:textSize="20sp"
    android:layout_centerHorizontal="true"
    android:paddingTop="10sp"
    android:textStyle="bold">
   </TextView>

  </RelativeLayout>
    
<TableLayout
   android:id="@+id/matrice"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:paddingTop="40dip"
    >

    </TableLayout>
    
<LinearLayout
        android:orientation="horizontal"
        android:paddingBottom="1.0dip"
        android:paddingTop="40dip"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        >

    <ImageView
            android:id="@+id/modifier "
            android:layout_width="70dip" 
            android:layout_height="40dip"
            android:src="@drawable/modifier"
            android:visibility="invisible"
            android:layout_weight="1.0" />
    
        <ImageView
            android:id="@+id/valider"
            android:layout_width="70dip" 
            android:layout_height="40dip"
            android:src="@drawable/valider"
            android:visibility="invisible"
            android:layout_weight="1.0" />

    </LinearLayout>
    
<LinearLayout
        android:id="@+id/operations"
        android:orientation="vertical"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        >
   
  </LinearLayout>
    

</LinearLayout>


